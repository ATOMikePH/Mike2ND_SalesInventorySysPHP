<?php
if (isset($_POST['filter_dates'])) {
    $start_date = $_POST['start_date'];
    $end_date = $_POST['end_date'];

    // Modify your SQL queries to include a WHERE clause for the date range
    $purchase_query = "SELECT * FROM `purchase_order_list` WHERE transaction_datetime BETWEEN '$start_date' AND '$end_date'";
    $sales_query = "SELECT * FROM `sales_list` WHERE transaction_datetime BETWEEN '$start_date' AND '$end_date'";
    $expenses_query = "SELECT * FROM `expenses` WHERE transaction_date BETWEEN '$start_date' AND '$end_date'";

    // Perform your queries and display results as needed
    $purchase_count = $conn->query($purchase_query)->num_rows;
    $sales_count = $conn->query($sales_query)->num_rows;
    $expenses_count = $conn->query($expenses_query)->num_rows;

    // Display the counts as needed
    echo "Purchase Records: $purchase_count";
    echo "Sales Records: $sales_count";
    echo "Expenses Records: $expenses_count";
}
?>